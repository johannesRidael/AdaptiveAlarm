<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adaptive_Alarm.Views.Information">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Adaptive Alarm is an alarm designed to wake you at a time that is most optimal. When you set an alarm Adaptive Alarm will try to wake you when you will feel the most refreshed close to the time you set."
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="Medium"
                   Margin="15, 20, 15, 0"/>
            <Label Text="You can set your latest wake up times for the week or change each one individualy"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="Medium"
                   Margin="15, 10, 15, 0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>